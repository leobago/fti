cd @CMAKE_SOURCE_DIR@/test/local/keepL4Ckpt
if [ $1 = 0 ]; then
    make run-nohead
    RTN=$?
    find Global/ | \
        sed 's/[0-9][0-9][0-9][0-9]-[0-9][0-9]-[0-9][0-9]_[0-9][0-9]-[0-9][0-9]-[0-9][0-9]//g' | \
        sed 's/Global//g' | \
        sed 's/l4_archive//g' | \
        sed 's/\///g' | \
        grep Ckpt | \
        sort \
        > tmp
    PATDIFF=$(diff patterns/H0.pat tmp 2>&1)
elif [ $1 = 1 ]; then
    make run-head
    RTN=$?
    find Global/ | \
        sed 's/[0-9][0-9][0-9][0-9]-[0-9][0-9]-[0-9][0-9]_[0-9][0-9]-[0-9][0-9]-[0-9][0-9]//g' | \
        sed 's/Global//g' | \
        sed 's/l4_archive//g' | \
        sed 's/\///g' | \
        grep Ckpt | \
        sort \
        > tmp
    PATDIFF=$(diff patterns/H1.pat tmp 2>&1)
fi
if ! [ -z "$PATDIFF" ]; then
    echo "pattern differ!"
    echo "$PATDIFF"
fi
if ! [ $RTN = 0 ]; then
    echo "program execution failed!"
fi
rm tmp
cd @CMAKE_BINARY_DIR@/test/local
if [ -z "$PATDIFF" ] && [ $RTN = 0 ]; then
    exit 0
else
    exit 255
fi
