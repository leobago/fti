                                      run_failure "ERASE" "CKPT" "PASS" "LOCAL"
                                      run_failure "ERASE" "ENC" "PASS" "LOCAL"
                                      run_failure "ERASE" "CONSECUTIVE_NODE" "PASS" "LOCAL"
                                      run_failure "ERASE" "NONCONSECUTIVE_NODE" "PASS" "LOCAL"
                                  fi
                                  if [ $level = 4 ]; then
                                      run_failure "ERASE" "CKPT" "FAIL" "GLOBAL"
                                  fi
                              fi
                          fi
                      fi
                  done
              done
              rm $NAME
          done
          let DFLAG=1
          let CFLAG=1
      done
  done
done
