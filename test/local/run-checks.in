                      should_not_fail $?
                      if [ $testFailed = 1 ]; then
                          echo -e ${IO_NAMES[$io_id]}"(ICP=$enable_icp): L"$level", head=0, keep="$keep", inline=(1,1,1), should recover, ID: "$check_id >> failed.log
