                      ( set -x; ENABLE_ICP=$enable_icp $MPIRUN -n $PROCS ./check.exe $NAME 0 $level $diffSize $MEM &>> check.log )
                      check_id=$(awk '$1 == "exec_id" {print $3}' < $NAME)
