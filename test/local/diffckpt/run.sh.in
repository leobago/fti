#!/bin/bash
MPIRUN="mpirun $MPIRUN_ARGS"

recoveryType=$1
cp cfg/H0POSIX .
rm -f logfile
rm -f logfile*.log

( set -x; $MPIRUN -n 8 ./checkDCPPosix.exe H0POSIX 1 0 $recoveryType > logfile0.log )
cat logfile0.log >>logfile

for i in $(seq 1 6); do
    ( set -x; $MPIRUN -n 8 ./checkDCPPosix.exe H0POSIX $i 0 $recoveryType > logfile$i.log )
    exec_id=$(grep "The execution ID is:" logfile$i.log | cut -d ':' -f 3|sed 's/ //g')
    if [ "$i" -ne "6" ]; then 
        rank=$(echo $((RANDOM % 8)))
        bytesToRemove=$(echo $((RANDOM % (10*1024*1024))))
        corruptedFile="Global/$exec_id/dCP/dcp-id0-rank$rank.fti"
        truncate -s -$bytesToRemove $corruptedFile 
    fi            
    cat logfile$i.log >> logfile
done
grep -q "\[SUCCESSFUL\]" logfile$i.log 
code=$?
if [ "$code" -eq "0" ]; then
    rm -f logfile*.log
    exit 0
else
    exit 255
fi    

